<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<div class="message"> 
  <% if @order.errors.any? %>
   <% @order.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  <% end %>
</div>


  <div class="form">
    <%= form_for @order do |f| %>
    <legend>我要快送</legend>
      <div class="input">
        <%= f.label :pickup_location,"出發地"%>
        <%= f.text_field :pickup_location %>
        <%= f.label :destination,"目的地" %>
        <%= f.text_field :destination %>
        <%= f.label :content,"寄送物品" %>
        <%= f.text_field :content %>
        <%= f.label :tel,"寄件人電話" %>
        <%= f.text_field :tel %>
        <%= f.label :recipient,"收件人" %>
        <%= f.text_field :recipient %>
        <%= f.label :recipient_tel,"收件人電話" %>
        <%= f.text_field :recipient_tel %>
      </div>
      <div class="but">
        <%= f.submit"送出" %>
      </div>
    <% end %>
  </div>


<div style='width: 800px;'>
  <div id="map" style='width: 1440px; height: 600px;'></div>
</div>

<div class="footer foo">
  Copyright © 2014 TAXIGOGO. All rights reserved and other such important stuff.
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){

  var cars = <%= @cars_hash.to_json.html_safe %>;

  markers = handler.addMarkers(cars);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>














