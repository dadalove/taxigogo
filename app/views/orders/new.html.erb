<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<div class="message"> 
  <% if @order.errors.any? %>
   <% @order.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  <% end %>
</div>


  <div class="form">
    <%= form_for @order do |f| %>
      <div class="input">
        <%= f.label :pickup_location,"Pickup Location"%>
        <%= f.text_field :pickup_location %>
        <%= f.label :destination,"Destination" %>
        <%= f.text_field :destination %>
        <%= f.label :content,"Content" %>
        <%= f.text_field :content %>
        <%= f.label :tel,"Tel" %>
        <%= f.text_field :tel %>
        <%= f.label :recipient,"Recipient" %>
        <%= f.text_field :recipient %>
        <%= f.label :recipient_tel,"Recipient Tel" %>
        <%= f.text_field :recipient_tel %>
      </div>
      <div class="but">
        <%= f.submit"submit" %>
      </div>
    <% end %>
  </div>


<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>


<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){

  var cars = <%= @cars_hash.to_json.html_safe %>;

  markers = handler.addMarkers(cars);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>














